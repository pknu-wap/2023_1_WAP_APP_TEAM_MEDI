<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="myCommentDto"
            type="com.android.mediproject.core.model.comments.MyCommentsListResponse.Comment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_10_main"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingVertical="6dp"
            android:text="@{myCommentDto.medicineId}"
            android:textColor="@color/main"
            android:textSize="13sp"
            app:chipStrokeColor="@color/main" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:text="@{myCommentDto.content}"
            android:textColor="@color/gray2"
            android:textSize="14sp" />
    </LinearLayout>
</layout>
